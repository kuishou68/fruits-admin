{
	"bsonType": "object",
	"description": "订单提醒表",
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false,
		"count": true
	},
	"required": ["order_id", "member_id", "is_delivered", "version", "is_delete", "create_uid"],
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"order_id": {
			"bsonType": "string",
			"description": "订单编号",
			"trim": "both"
		},
		"member_id": {
			"bsonType": "int",
			"description": "会员ID"
		},
		"member_openid": {
			"bsonType": "string",
			"description": "会员openid",
			"trim": "both"
		},
		"member_name": {
			"bsonType": "string",
			"description": "会员",
			"trim": "both"
		},
		"member_headimg": {
			"bsonType": "string",
			"description": "会员头像",
			"trim": "both"
		},
		"member_mobile": {
			"bsonType": "string",
			"description": "会员手机号",
			"trim": "both"
		},
		"reminder_cnt": {
			"bsonType": "int",
			"description": "提醒次数"
		},
		"is_delivered": {
			"bsonType": "string",
			"description": "是否已发货 待发货|已发货",
			"trim": "both"
		},
		"version": {
			"bsonType": "int",
			"description": "数据版本",
			"defaultValue": 1
		},
		"is_delete": {
			"bsonType": "int",
			"description": "是否删除 0否 1已删除",
			"defaultValue": 0
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"create_uid": {
			"bsonType": "string",
			"description": "创建人ID",
			"trim": "both",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"create_uname": {
			"bsonType": "string",
			"description": "创建人",
			"trim": "both"
		},
		"last_modify_time": {
			"bsonType": "timestamp",
			"description": "编辑时间"
		},
		"last_modify_uid": {
			"bsonType": "string",
			"description": "编辑人ID",
			"trim": "both"
		},
		"last_modify_uname": {
			"bsonType": "string",
			"description": "编辑人",
			"trim": "both"
		},
		"delete_time": {
			"bsonType": "timestamp",
			"description": "删除时间"
		},
		"delete_uid": {
			"bsonType": "string",
			"description": "删除人ID",
			"trim": "both"
		},
		"delete_uname": {
			"bsonType": "string",
			"description": "删除人",
			"trim": "both"
		}
	}
}
