{
	"bsonType": "object",
	"description": "水果详情表",
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false,
		"count": true
	},
	"required": ["goods_id", "version", "is_delete", "create_uid"],
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"goods_id": {
			"bsonType": "string",
			"description": "水果ID"
		},
		"description": {
			"bsonType": "string",
			"description": "水果描述",
			"trim": "both"
		},
		"desc_pc": {
			"bsonType": "string",
			"description": "水果描述 PC",
			"trim": "both"
		},
		"desc_mobile": {
			"bsonType": "string",
			"description": "水果描述 移动端",
			"trim": "both"
		},
		"cancel_reason": {
			"bsonType": "string",
			"description": "下架原因",
			"trim": "both"
		},
		"cancel_uid": {
			"bsonType": "string",
			"description": "下架人ID",
			"trim": "both"
		},
		"cancel_uname": {
			"bsonType": "string",
			"description": "下架人",
			"trim": "both"
		},
		"cancel_time": {
			"bsonType": "timestamp",
			"description": "下架时间"
		},
		"version": {
			"bsonType": "int",
			"description": "数据版本",
			"defaultValue": 1
		},
		"is_delete": {
			"bsonType": "int",
			"description": "是否删除 0否 1已删除",
			"defaultValue": 0
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"create_uid": {
			"bsonType": "string",
			"description": "创建人ID",
			"trim": "both",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"create_uname": {
			"bsonType": "string",
			"description": "创建人",
			"trim": "both"
		},
		"last_modify_time": {
			"bsonType": "timestamp",
			"description": "编辑时间"
		},
		"last_modify_uid": {
			"bsonType": "string",
			"description": "编辑人ID",
			"trim": "both"
		},
		"last_modify_uname": {
			"bsonType": "string",
			"description": "编辑人",
			"trim": "both"
		}
	}
}
