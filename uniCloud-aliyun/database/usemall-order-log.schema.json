{
	"bsonType": "object",
	"description": "订单日志表",
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false,
		"count": true
	},
	"required": ["order_id", "version", "is_delete", "create_uid"],
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"order_id": {
			"bsonType": "string",
			"description": "订单编号",
			"trim": "both"
		},
		"log_type": {
			"bsonType": "string",
			"description": "",
			"trim": "both"
		},
		"current_state": {
			"bsonType": "string",
			"description": "",
			"trim": "both"
		},
		"prev_state": {
			"bsonType": "string",
			"description": "",
			"trim": "both"
		},
		"ip": {
			"bsonType": "string",
			"description": "",
			"trim": "both",
			"forceDefaultValue": {
				"$env": "clientIP"
			}
		},
		"remark": {
			"bsonType": "string",
			"description": "",
			"trim": "both"
		},
		"version": {
			"bsonType": "int",
			"description": "数据版本",
			"defaultValue": 1
		},
		"is_delete": {
			"bsonType": "int",
			"description": "是否删除 0否 1已删除",
			"defaultValue": 0
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"create_uid": {
			"bsonType": "string",
			"description": "创建人ID",
			"trim": "both",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"create_uname": {
			"bsonType": "string",
			"description": "创建人",
			"trim": "both"
		}
	}
}
