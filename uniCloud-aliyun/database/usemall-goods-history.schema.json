{
	"bsonType": "object",
	"description": "产品浏览历史表",
	"permission": {
		"read": true,
		"create": true,
		"update": "doc.create_uid == auth.uid",
		"delete": "doc.create_uid == auth.uid",
		"count": "doc.create_uid == auth.uid"
	},
	"required": ["goods_id", "visit_cnt", "state", "version", "is_delete", "create_uid"],
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"goods": {
			"bsonType": "string",
			"description": "水果ID",
			"foreignKey": "usemall-goods._id"
		},
		"visit_cnt": {
			"bsonType": "int",
			"description": "访问数"
		},
		"sort": {
			"bsonType": "int",
			"description": "排序"
		},
		"remark": {
			"bsonType": "string",
			"description": "备注",
			"trim": "both"
		},
		"state": {
			"bsonType": "string",
			"description": "状态 待审核|销售中|已下架",
			"trim": "both"
		},
		"version": {
			"bsonType": "int",
			"description": "数据版本",
			"defaultValue": 1
		},
		"is_delete": {
			"bsonType": "int",
			"description": "是否删除 0否 1已删除",
			"defaultValue": 0
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"create_uid": {
			"bsonType": "string",
			"description": "创建人ID",
			"trim": "both",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"create_uname": {
			"bsonType": "string",
			"description": "创建人",
			"trim": "both"
		},
		"last_modify_time": {
			"bsonType": "timestamp",
			"description": "编辑时间"
		},
		"last_modify_uid": {
			"bsonType": "string",
			"description": "编辑人ID",
			"trim": "both"
		},
		"last_modify_uname": {
			"bsonType": "string",
			"description": "编辑人",
			"trim": "both"
		},
		"delete_time": {
			"bsonType": "timestamp",
			"description": "删除时间"
		},
		"delete_uid": {
			"bsonType": "string",
			"description": "删除人ID",
			"trim": "both"
		},
		"delete_uname": {
			"bsonType": "string",
			"description": "删除人",
			"trim": "both"
		}
	}
}
