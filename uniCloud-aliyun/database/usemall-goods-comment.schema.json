{
	"bsonType": "object",
	"description": "水果评论表",
	"permission": {
		"read": true,
		"create": false,
		"update": false,
		"delete": false,
		"count": true
	},
	"required": ["goods_id", "review_cnt", "state", "version", "is_delete", "create_uid"],
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"goods_id": {
			"bsonType": "string",
			"description": "水果ID",
			"foreignKey": "usemall-goods._id"
		},
		"goods_sku": {
			"bsonType": "string",
			"description": "水果SKU",
			"trim": "both"
		},
		"goods_type": {
			"bsonType": "string",
			"description": "购买类型",
			"trim": "both"
		},
		"member_id": {
			"bsonType": "string",
			"description": "用户ID",
			"trim": "both"
		},
		"member_name": {
			"bsonType": "string",
			"description": "用户名称",
			"trim": "both"
		},
		"member_headimg": {
			"bsonType": "string",
			"description": "用户头像",
			"trim": "both"
		},
		"order_id": {
			"bsonType": "string",
			"description": "订单号",
			"trim": "both"
		},
		"review_type": {
			"bsonType": "string",
			"description": "评价类型 差评|中评|好评",
			"trim": "both"
		},
		"review_cnt": {
			"bsonType": "int",
			"description": "评论星数"
		},
		"review_content": {
			"bsonType": "string",
			"description": "评论内容",
			"trim": "both"
		},
		"review_append_time": {
			"bsonType": "timestamp",
			"description": "追评时间"
		},
		"review_append_content": {
			"bsonType": "string",
			"description": "追评内容",
			"trim": "both"
		},
		"review_imgs": {
			"bsonType": "array",
			"description": "晒图 img json 集合"
		},
		"replay_time": {
			"bsonType": "timestamp",
			"description": "商家回复时间"
		},
		"replay_content": {
			"bsonType": "string",
			"description": "回复内容",
			"trim": "both"
		},
		"replay_append_time": {
			"bsonType": "timestamp",
			"description": "回复追评时间"
		},
		"replay_append_content": {
			"bsonType": "string",
			"description": "回复追评内容",
			"trim": "both"
		},
		"remark": {
			"bsonType": "string",
			"description": "备注",
			"trim": "both"
		},
		"state": {
			"bsonType": "string",
			"description": "状态 显示|隐藏",
			"trim": "both"
		},
		"version": {
			"bsonType": "int",
			"description": "数据版本",
			"defaultValue": 1
		},
		"is_delete": {
			"bsonType": "int",
			"description": "是否删除 0否 1已删除",
			"defaultValue": 0
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"create_uid": {
			"bsonType": "string",
			"description": "创建人ID",
			"trim": "both",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"create_uname": {
			"bsonType": "string",
			"description": "创建人",
			"trim": "both"
		},
		"last_modify_time": {
			"bsonType": "timestamp",
			"description": "编辑时间"
		},
		"last_modify_uid": {
			"bsonType": "string",
			"description": "编辑人ID",
			"trim": "both"
		},
		"last_modify_uname": {
			"bsonType": "string",
			"description": "编辑人",
			"trim": "both"
		}
	}
}
