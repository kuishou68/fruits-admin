{
	"bsonType": "object",
	"description": "购物车",
	"permission": {
		"read": "doc.create_uid == auth.uid",
		"create": true,
		"update": "doc.create_uid == auth.uid",
		"delete": "doc.create_uid == auth.uid",
		"count": "doc.create_uid == auth.uid"
	},
	"required": ["goods_id", "version", "is_delete", "create_uid"],
	"properties": {
		"_id": {
			"description": "存储文档 ID，系统自动生成"
		},
		"goods": {
			"bsonType": "string",
			"description": "水果ID",
			"foreignKey": "usemall-goods._id"
		},
		"goods_sku": {
			"bsonType": "string",
			"description": "水果SKU",
			"foreignKey": "usemall-goods-sku._id"
		},
		"goods_num": {
			"bsonType": "int",
			"description": "水果数量"
		},
		"goods_cart_price": {
			"bsonType": "double",
			"description": "购物车单价"
		},
		"remark": {
			"bsonType": "string",
			"description": "备注",
			"trim": "both"
		},
		"version": {
			"bsonType": "int",
			"description": "数据版本",
			"defaultValue": 1
		},
		"is_delete": {
			"bsonType": "int",
			"description": "是否删除 0否 1已删除",
			"defaultValue": 0
		},
		"create_time": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"create_uid": {
			"bsonType": "string",
			"description": "创建人ID",
			"trim": "both",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"create_uname": {
			"bsonType": "string",
			"description": "创建人",
			"trim": "both"
		},
		"last_modify_time": {
			"bsonType": "timestamp",
			"description": "编辑时间"
		},
		"last_modify_uid": {
			"bsonType": "string",
			"description": "编辑人ID",
			"trim": "both"
		},
		"last_modify_uname": {
			"bsonType": "string",
			"description": "编辑人",
			"trim": "both"
		},
		"delete_time": {
			"bsonType": "timestamp",
			"description": "删除时间"
		},
		"delete_uid": {
			"bsonType": "string",
			"description": "删除人ID",
			"trim": "both"
		},
		"delete_uname": {
			"bsonType": "string",
			"description": "删除人",
			"trim": "both"
		}
	}
}
